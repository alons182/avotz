
@import "nib"
@import "normalize.styl"
@import "icons.styl"
@import "devices.styl"

@font-face {
	font-family: 'montserratbold';
	src: url('../fonts/montserrat-bold-webfont.eot');
	src: url('../fonts/montserrat-bold-webfont.eot?#iefix') format('embedded-opentype'),
		 url('../fonts/montserrat-bold-webfont.woff') format('woff'),
		 url('../fonts/montserrat-bold-webfont.ttf') format('truetype'),
		 url('../fonts/montserrat-bold-webfont.svg#montserratbold') format('svg');
	font-weight: normal;
	font-style: normal;

}
@font-face {
	font-family: 'montserratregular';
	src: url('../fonts/montserrat-regular-webfont.eot');
	src: url('../fonts/montserrat-regular-webfont.eot?#iefix') format('embedded-opentype'),
		 url('../fonts/montserrat-regular-webfont.woff') format('woff'),
		 url('../fonts/montserrat-regular-webfont.ttf') format('truetype'),
		 url('../fonts/montserrat-regular-webfont.svg#montserratregular') format('svg');
	font-weight: normal;
	font-style: normal;

}

$lima = #a9bf04
$amarillo = #ffc43a
$turquesa = #63ad73
$turquesa2 = #7cb585
$oscuro = #3b434e
$naranja = #f39c12
$rojo = #f26c52

body
	background #f8f8f8
	font-family Arial

h1
	font-family 'montserratbold'
p
	line-height 1.8em

ul
	margin 0
	padding 0
a
	text-decoration none
	color $naranja
	font-weight bold

	&:hover
		text-decoration underline


.round
	border-radius 50%
	overflow hidden
.header
	height 60px
	transition: all .3s
	width 100%
	z-index 100

	#logo

		margin-left 10px
		margin-top 10px
		width 200px
	#btn_nav
		background $oscuro
		color #FFF
		cursor pointer
		font-size 1.5em
		padding .3em
		right 20px
		top 20px


		.icon-menu
			color $azul
			vertical-align middle
	#menu
		margin-top 10px
		transition all .3s

		ul
			margin 0
			padding 0

			li
				background $turquesa
				display block
				text-align center

				a
					color #fff
					display block
					font-family 'montserratregular'
					font-size 13px
					padding 1.5em .4em
					text-decoration none
					text-transform uppercase
					font-weight normal


				&:hover
					background $oscuro
			.current
				background $oscuro

			.submenu
				display none
				position absolute
				background $oscuro//$turquesa
				padding .5em
				text-align left
				left 0
				right 0

				li
					margin 0
					border none
					display block
					a
						color #FFF
						padding 1em
						display block

						&:hover
							background $lima
							color #FFF


#home
	background-attachment fixed
	background-color $lima
	background-image url('../img/bg_home.jpg')
	background-position center  center
	background-repeat no-repeat
	background-size cover, cover

	article
		top 40px

		#info
			width 100%


			h1
				color #fff
				font-size 2.5em
				line-height 1em
				margin 0
				text-transform uppercase
			p
				color #fff

			a
				display block

			.contact
				margin-bottom 10px

			strong
				font-size 19px
				color #FFF





		#devices-animation
			display none
			right 80px
#services

	blockquote
		float none
		text-align center
		border 5px solid $turquesa
		padding 1.5em
		.icon
			font-size 5em
			color $turquesa
	.service
		h1
			font-size 2em

		.other-services
			margin-top 20px
			text-align center
			p
				margin-bottom 0
				font-weight bold
			a
				color $turquesa
				padding .3em
				font-size 2.5em
				text-align center
				display inline-block
				transition all .5s ease
				position relative
				top 0

				&:hover
					color $naranja
					text-decoration none
					top -10px


	.services-video
	#services-info
		display inline-block
		vertical-align top
		margin-top 40px
	.services-video
		width 100%


		iframe
			border 5px solid $turquesa



	#services-info

		.service
			display block
			width 100%

			.icon
				color $turquesa
				display block
				font-size 4em
				position relative
				top 0
				transition all .5s ease


			h3
				font-size 1.2em
				font-weight bold
				margin-bottom 0
				margin-top 10px
				color $oscuro
			a:hover
				text-decoration none
				.icon
					top -10px
					color $naranja
			p

				a:hover
					text-decoration underline

	.habilidades
		list-style none
		li
			background $turquesa
			margin .3em

			&:nth-child(even)
				background $turquesa2

			&:before
				content '+'
				float left
				color #FFF
				padding .3em
				background rgba(255,255,255,.2)
			a
				color white
				padding .5em 0em .5em 1.8em
				display block
				font-size .8em
				text-decoration none
				font-weight normal
			&:hover
				text-decoration underline
#works
	background $oscuro

	h1
	p
		color #fff



	#works-gallery

		#select-gallery
			background #303843
			border none
			border-radius 10px
			color #FFF
			font-size 14px
			margin .5em
			padding 10px
			width 96%

		.tabs
			height 30px
			margin 100px auto 0
			position relative
			width 390px



			input
				cursor pointer
				height 40px
				left 0px
				opacity 0
				top 0px
				width 90px
				z-index 1000

				&:hover + label
					color $lima

				&:checked + label
					background $turquesa
					color #FFF
					z-index 6

			#tab-2
				left 90px

			#tab-3
				left 189px

			#tab-4
				left 284px

			label
				border-radius 10px
				color #FFF
				display block
				float left
				font-size .8em
				height 30px
				letter-spacing 1px
				line-height 30px
				margin-right 5px
				padding 5px 0px
				text-align center
				text-transform uppercase
				transition all 0.5s ease
				width 90px

				&:first-of-type
					z-index 4
				&:after
					bottom -2px
					content ''
					display block
					height 2px
					left 0
					position absolute
					width 100%


			.tab-label-2
				z-index 3


			.tab-label-3
				z-index 2


			.tab-label-4
				z-index 1


		.trabajo
			display inline-block
			vertical-align top
			width 100%//16.84%//270px
			background-size 150%
			background-position top left
			background-repeat no-repeat
			height 250px
			transition all .3s ease
			&-stick
				position absolute
				right 15px
				background rgba(165,164,0,.9)
				max-width 90px
				width 50%
				margin 0
				text-align center
				font-size 10px
				padding 1.5em .5em
				line-height 13px

			&-title
				position absolute
				text-align center
				width 80%
				background rgba(38,42,50,0.9)
				bottom 10%
				margin 0
				padding .5em 0
				left 10%
				text-transform uppercase
				font-weight 300

				transition all .3s ease
			.overlay

				display block
				height 98%
				top 0
				transition all 0.5s ease
				width 100%

			figure img
				height 100%
				width 100%


			a
				color white
				display block
				text-decoration none
				position absolute
				background rgba(38,42,50,0.4)
				left 0
				right 0
				bottom 0
				top 0
				transition all .3s ease





			&:hover
				background-size 140%
				.trabajo-title
					bottom 0
					background white
					color $oscuro
					left 0
					right 0
					width 100%
					border-top 5px solid $turquesa
				a
					background rgba(59,67,78,0)



		.pagination
			margin: 15px auto;
			text-align center
		#results-content
			min-height 375px !important
			border-top: 10px solid $turquesa
			margin-top 2em
	.works-middle
		padding: 2.5em 0px
		background oscuro
		text-align center
		color white
		font-size 1.5em
		p 
			font-size 1em
		&.turquesa
			background $turquesa
#about
	blockquote
		text-align center
		color $turquesa
		line-height 1.5em
		font-size 1em
		figure

			width 150px
			border 5px solid $turquesa
			padding 1.5em
			margin 0 auto
			img
				width 100%

.team
	padding-top 49px
	background-color #F3F3F3
	
	&__features
		background-color #e3e3e3
		&__container
			width 90%
			margin 0 auto
			padding 2rem 0
		&__item
			position relative
			margin-bottom 4rem
			&__icon
				font-size 2rem
				background-color white
				border-radius 50%
				color $turquesa
				display block
				width 60px
				height 60px
				position relative
				float right
				margin-top -20px
				i 
					position absolute
					top 50%
					left 50%
					transform translate(-50%, -50%)
			&__title 
				text-transform uppercase
				font-size 2rem
				color $turquesa
				position relative
				&:after
					height 5px 
					width 100px 
					margin 0 auto 
					content ''
					background-color white
					position absolute
					display block
					left 50%
					bottom -12px
					transform translate(-50%, 0)
					
					
	&__container
		margin 0 auto
		width 90%
		margin-bottom 4em
	&__person
		padding-top 70%//45%
		background-repeat no-repeat
		background-size contain
		position relative
		
		&__social
			a
				font-size 3rem
				display inline-block
				padding .5rem
				&:hover
					color $turquesa2
					text-decoration none
				img
					&:hover 
						filter: hue-rotate(90deg) grayscale(.7);
						-webkit-filter: hue-rotate(90deg) grayscale(.7);
					
		
		
		
		&--gerardo
			background-image url('../img/gerardo_thumb.jpg')
		&--alonso
			background-image url('../img/alonso_thumb.jpg')
		&--dylan
			background-image url('../img/dylan_thumb.jpg')			
		&--left
			background-position top left
		&--right
			background-position top right	
		&__title
			text-transform uppercase
			font-size 1.8rem
			margin-bottom .5rem
		&__subtitle
			color $turquesa
			margin 0
			text-transform uppercase
			font-weight bold
			font-size 1.3rem
	&__title
		margin-top 0
		background-color $oscuro
		padding 1.8rem 0
		margin-bottom 0
		text-align center
		color white
		text-transform uppercase

		
							
#testimonials
	background url('../img/bg_testimonials.jpg') repeat $oscuro
	color white
	height 450px

	.opinion
