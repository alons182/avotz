	#home
		article
			#info
				padding 0
				position absolute
				width 475px
				margin-top -55px

				h1
					font-size 4em


			#devices-animation
				right 0
	#works
		#works-gallery
			.trabajo
				width  25%//16.84%//16.84%//270px
				height 300px

	#presentations
		text-align left
		h1
			text-align left
		.iframe-block
			width 500px
