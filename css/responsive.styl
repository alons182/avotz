@media only screen and (min-width:  480px) 
	#works
				
		#works-gallery
			
			#select-gallery
				display none
			.tabs
				display block

	
@media only screen and (min-width:  750px) 
	header
		position fixed
		#logo 
			float left
		#btn_nav
			display none
		#menu
			float right
			margin-top 10px
			transition: all .3s
			display block !important

			ul 
				margin 0
				padding 0

				li 
					display inline-block
					vertical-align top
					border-top 2px solid transparent
					background transparent

					a 
						display block
						padding 1.5em .4em
						text-decoration none
						color #fff
						font-family 'montserratregular'
						font-size 13px
						text-transform uppercase
						
						
					&:hover 
						border-top-color #FFF
						background transparent
						
				.current
					border-top-color #FFF
					background transparent
	#home
		article
			padding 0 1em
			#info
				width 350px
				position absolute
				//padding 0
					
					
				a 
					position relative
					left 33px
					display inline-block
			#devices-animation
				display block
				right 100px
	#services
		#services-info
			
			.service 
				display inline-block
				vertical-align top
				width 270px
				margin 1em

	#testimonials
		display block
	#news
		display block
	#contact
		#info-form
			width 450px
	#works
				
		#works-gallery
			
			.tabs
				width 560px
				
				input 
					
					width 120px
					

				#tab-2
					left 135px

				#tab-3
					left 275px

				#tab-4
					left 415px

				label 
									
					padding 5px 10px
					margin-right 30px


			.trabajo
				width  33.64%//16.84%//270px
	
	
	.section-page
		min-height 650px
		.wrapper

		//> article
			padding-top 65px
			//padding-left 0
			//padding-right 0
			h1
				text-align left
	.border-title
		margin 20px 0
	
			

@media only screen and (min-width:  870px) 
	header
		#menu
			ul 
				li
					margin .5em .5em 0
					

	
						
