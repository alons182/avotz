	&:hover
		background #e74c2e
		

.border-title
	background $turquesa
	display block
	height 8px
	margin 20px auto
	width 200px
.border-large
	width 600px

.white-space-fix
	margin-bottom -4px
	margin-right -4px

.afix 
	header
		background $turquesa
