			.wrapper
				padding-top 100px
				

.btn_yellow
.btn_red
	background $amarillo
	border-radius 10px
	box-shadow 2px 3px 1px $naranja
	color #b26500
	display inline-block
	font-weight bold
	min-width 98px
	padding 1em 4em
	text-align center
	text-decoration none

	&:hover
		background #f6b92b
