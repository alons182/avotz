@font-face 
	font-family 'avotz_icon'
	src:url('../fonts/avotz_icon.eot')
	src:url('../fonts/avotz_icon.eot?#iefix') format('embedded-opentype'),	url('../fonts/avotz_icon.woff') format('woff'),url('../fonts/avotz_icon.ttf') format('truetype'),	url('../fonts/avotz_icon.svg#avotz_icon') format('svg')
	font-weight normal
	font-style normal


/* Use the following CSS code if you want to use data attributes for inserting your icons */
[data-icon]:before 
	font-family 'avotz_icon'
	content attr(data-icon)
	speak none
	font-weight normal
	font-variant normal
	text-transform: none
	line-height 1
	-webkit-font-smoothing: antialiased


/* Use the following CSS code if you want to have a class per icon */
